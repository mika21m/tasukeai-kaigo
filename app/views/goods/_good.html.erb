<% if user_signed_in? %>
 <% if current_user.gooded_by?(post.id) %>
   <td>
     <%= link_to destroy_good_path(post), method: :DELETE, remote: true do %>
       <i class="fa fa-heart unlike-btn"> いつもお疲れ様!</i> 
     <% end %> 
     <%= post.goods.count %>
   </td>
 <% else %>
   <td>
     <%= link_to create_good_path(post), method: :POST, remote: true do %>
       <i class="fa fa-heart like-btn"> いつもお疲れ様!</i>
     <% end %>
     <%= post.goods.count %>
   </td>
 <% end %>
<% end %>