<% if user_signed_in? %>
 <% if current_user.liked_by?(post.id) %>
   <td>
     <%= link_to destroy_like_path(post), method: :DELETE, remote: true do %> 
       <i class="far fa-lightbulb unlight-btn"> 天才! </i>
     <% end %>
     <%= post.likes.count %>
   </td>
 <% else %>
    <td>
     <%= link_to create_like_path(post), method: :POST, remote: true do %> 
       <i class="far fa-lightbulb light-btn"> 天才! </i> 
     <% end %> 
     <%= post.likes.count %>
   </td>
 <% end %>
<% end %>